# LMS Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Django Configuration
SECRET_KEY=your-super-secret-key-here-at-least-50-characters-long
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost,127.0.0.1

# Database Configuration (PostgreSQL recommended for production)
DATABASE_ENGINE=postgresql
DATABASE_NAME=lms_production_db
DATABASE_USER=lms_user
DATABASE_PASSWORD=your-database-password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# For MySQL (alternative)
# DATABASE_ENGINE=mysql
# DATABASE_NAME=lms_production_db
# DATABASE_USER=lms_user
# DATABASE_PASSWORD=your-database-password
# DATABASE_HOST=localhost
# DATABASE_PORT=3306

# AI Integration
GEMINI_API_KEY=your-gemini-api-key-here

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password-or-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Redis Configuration (for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# File Storage (AWS S3 for production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-lms-bucket
AWS_S3_REGION_NAME=us-east-1

# Development only (set to sqlite for development)
# DATABASE_ENGINE=sqlite
